<h1></h1>
<div class="d-flex justify-content-center">
  <p><%= @place.name %></p>
</div>
<div class="d-flex justify-content-center">
  <p><%= @place.address %></p>
</div>
<% background = @place.photos.attached? ? cl_image_path(@place.photos.first.key) : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png'%>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= background %>);">
  <div class="container">

  </div>
</div>

<div class='container mt-3'>
<div class="d-flex justify-content-between" >
  <p><%= @place.description %></p>
  <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
</div>
</div>

<div class='container mt-3'>
  <div class="d-flex justify-content-between">
    <div class='preço-rating'>

        <div class= 'preço'>
          <h2> R$ <%= @place.price.round %> / noite </h2>  
        </div>
        <%# <div class= 'stars'>
          <h1> 4.9 </h1>  
        </div> %>
    </div>
  </div>
</div>

<div id="map"
  style="width: 100%; height: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>



