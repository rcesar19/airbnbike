<!DOCTYPE html>
<html>
  <head>
    <title>Airbnbike</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
        <%= link_to root_path,  class: "navbar-brand" do %>

        <%= image_tag "https://w7.pngwing.com/pngs/501/253/png-transparent-freight-bicycle-cycling-computer-icons-ikonlar-angle-text-logo.png" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

          <li class="nav-item">
            Olá<%= user_signed_in? ? " #{current_user.name}" : "!" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user and current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "https://static.thenounproject.com/png/2643420-200.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">


              <% if current_user %>
                <%= link_to "Torne-se um anfitrião", new_place_path, class: "dropdown-item" %>
                <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
                <%= link_to "Sair", destroy_user_session_path, class: "dropdown-item", method: :delete%>
              <% else %>
                <%= link_to "Login", user_session_path, class: "dropdown-item" %>
                <%= link_to "Cadastre-se", new_user_registration_path, class: "dropdown-item" %>
              <% end %>

            </div>
          </li>
        </ul>
      </div>
    </div>



<div>
    <%= yield %>
</div>

    <div class="footer">
      <div class="footer-links">

        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>

      </div>
      <div class="footer-copyright">
        This footer is made with <i class="fas fa-heart"></i> at Le Wagon
      </div>
    </div>

  </body>


</html>
