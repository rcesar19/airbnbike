<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.bikemagazine.com.br/wp-content/uploads/2012/02/primeira-bike1.jpg);">
  <div class="container col-6">
    <div class="search-form-control form-group">
      <%= form_tag places_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Encontre um lugar"
      %>
      <%= submit_tag "Search", class: "btn btn-flat" %>
      <% end %>
    </div>
    <h1>Airbnbike <strong></strong><strong></strong></h1>
    <p>Encontre onde passar a noite durante a sua jornada.</p>
    <%= link_to "Veja todos os locais", places_path, class: "btn btn-flat" %>
  </div>
</div>

<div class='container'>
  <div class='container'>
    <div class="cards">
      <% @places.each do |place| %>
        <%= link_to place_path(place) do %>
          <div class="card-trip">
          <% if place.photos.first.present? %>
            <%= cl_image_tag place.photos.first.key, crop: :fill %>
          <% else %>
            <img src= 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg' />
          <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= place.name %></h2>
            <p><%= place.description %></p>
          </div>
        <h2 class="card-trip-pricing">$ <%= place.price.to_i %> / noite</h2>
        </div>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
 </div>
</div>

